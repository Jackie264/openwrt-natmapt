#!/bin/sh
# natmap integration for firewall4

. /lib/functions/network.sh

#nft list tables
#nft list table inet fw4

nft insert rule inet fw4 input position $(nft -nna list chain inet fw4 input 2>/dev/null | \
sed -En "s|.+\bjump input_[^\s]+\b.+\s*#\s*handle\s*(\d+).*|\1|p" | head -1) jump natmap_input comment "\"Hook into natmap input chain\""

/etc/init.d/natmap enabled && /etc/init.d/natmap reload
exit 0
